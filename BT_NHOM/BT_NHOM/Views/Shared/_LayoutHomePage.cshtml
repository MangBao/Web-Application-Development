
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nhà Sách Phương Nam</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="~/Assets/CSS/mmenu-light.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Assets/CSS/base.css">
    <link rel="stylesheet" href="~/Assets/CSS/main.css">
    <!-- <link rel="stylesheet" href="./assets/fontawesome-free-5.12.1/fontawesome-free-5.12.1-web/css/all.min.css"> -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap&subset=vietnamese" rel="stylesheet">
    <link rel="stylesheet" href="~/Assets/fontawesome-free-5.15.3-web/css/all.min.css">
    <script src="~/Assets/JS/mmenu-light.js"></script>
    <script src="~/Assets/JS/index.js"></script>

</head>

<body>
    <div class="app">
        <header class="header">
            <div class="navbar">
                <div class="navbar-right">
                    <ul class="navbar-list">
                        <li class="navbar-item ">
                            <a class="navbar-link" href="#">Trang chủ</a>
                        </li>
                        <li class="navbar-item ">
                            <a class="navbar-link" href="#portfolio">Giới thiệu</a>
                        </li>
                        <li class="navbar-item ">
                            <a class="navbar-link" href="#contact">Contact</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-left">
                    <ul class="navbar-list">
                        <li class="navbar-item ">
                            <a id="sign-in" class="navbar-link" href="#">
                                Đăng nhập
                                <i class="fas fa-sign-in-alt"></i>
                            </a>
                        </li>
                        <li id="sign-up" class="navbar-item ">
                            <a class="navbar-link" href="#portfolio">
                                Đăng ký
                                <i class="fas fa-user-plus"></i>
                            </a>
                        </li>
                        <li class="class_none navbar-item navbar-user" id="userAcc">
                            <img class="user-img" src="https://scontent-hkg4-1.xx.fbcdn.net/v/t1.6435-9/137061987_1041857019558186_797500387347313500_n.jpg?_nc_cat=108&ccb=1-3&_nc_sid=09cbfe&_nc_ohc=zfaFQgKAZHsAX-CbEwQ&_nc_ht=scontent-hkg4-1.xx&oh=e227dc79a87bb607149334f31c4aff8b&oe=60B24440">
                            <span class="navbar-user-name">Mang Bảo</span>

                            <ul class="user-menu">
                                <li class="user-item">
                                    <a href="">Tài khoản của tôi</a>
                                </li>
                                <li class="user-item">
                                    <a href="">Địa chỉ của tôi</a>
                                </li>
                                <li class="user-item user-item--separate">
                                    <a href="">Đăng xuất</a>
                                </li>
                            </ul>
                        </li>
                        <li class="navbar-item ">
                            <a class="navbar-link" href="@Url.Action("Giohang", "Giohang/Giohang", null)">
                                <i class="fas fa-cart-plus"></i>
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
            <div class="header-name">
                <h1 class="header-text ">Nhà sách Phương Nam</h1>
                <h3 style=" letter-spacing: 4px;" class="header-text ">Sách là cửa sổ của tri thức</h3>
            </div>
            <div class="header__search-input-wrap">
                <a href="" class="toggle_button margin-right">
                    <!-- <i class="fas fa-th-list"></i> -->

                    <div class="head">
                        <a href="#menu"><i class="fas fa-th-list toggle_icon"></i></i></a>
                        <div class="navbar-right" id="menu">
                            <ul class="navbar-list">
                                <li class="navbar-item ">
                                    <a class="navbar-link" href="#">Trang chủ</a>
                                </li>
                                <li class="navbar-item ">
                                    <a class="navbar-link" href="#portfolio">Giới thiệu</a>
                                </li>
                                <li class="navbar-item ">
                                    <a class="navbar-link" href="#contact">Contact</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </a>

                <input type="text" class="header__search-input margin-right" placeholder="Nhập để tìm kiếm">
                <button class="header__search-btn">
                    <i class="header__search-btn-icon fas fa-search"></i>
                </button>
                <a href="" class="toggle_button margin-right">
                    <i class="fas fa-cart-plus"></i>
                </a>
                <a href="" id="sign-in-mb" class="toggle_button">
                    <i class="fas fa-user icon-author"></i>
                </a>
                <a href="" class="toggle_button user-link class_none">
                    <img class="user-img" src="https://scontent-hkg4-1.xx.fbcdn.net/v/t1.6435-9/137061987_1041857019558186_797500387347313500_n.jpg?_nc_cat=108&ccb=1-3&_nc_sid=09cbfe&_nc_ohc=zfaFQgKAZHsAX-CbEwQ&_nc_ht=scontent-hkg4-1.xx&oh=e227dc79a87bb607149334f31c4aff8b&oe=60B24440">
                </a>
            </div>

        </header>

        <div class="app__container">
            @RenderBody()
        </div>

        <footer class="footer">
            <div>
                <aside class="footer-social" style="text-align: center;">
                    <ul class="social-list">
                        <li class="social-item">
                            <a href="" class="social-link">
                                <i class="social-icon fab fa-facebook-square "></i>
                            </a>
                        </li>
                        <li class="social-item">
                            <a href="" class="social-link">
                                <i class="social-icon fab fa-twitter "></i>
                            </a>
                        </li>
                        <li class="social-item">
                            <a href="" class="social-link">
                                <i class="social-icon fab fa-instagram "></i>
                            </a>
                        </li>

                    </ul>
                </aside>

                <div class="for_us">
                    <div class="for_us-SIA">
                        <h4 class="self_title">Về chúng tôi</h4>
                        <ul style="list-style-type: none;" class="self_list">
                            <li class="self_item">
                                <a class="self_link" href="#">Blog</a>
                            </li>
                            <li class="self_item">
                                <a class="self_link" href="">Nhân viên tư vấn</a>
                            </li>
                            <li class="self_item">
                                <img class="self_img" src="~/Assets/Multimedia/bo-cong-thuong.png" />
                            </li>
                        </ul>
                    </div>
                    <div class="for_us-SIA">
                        <h4 class="self_title">Thông tin</h4>
                        <ul style="list-style-type: none;" class="self_list">
                            <li class="self_item">
                                <a class="self_link" href="">Thanh toán và bảo mật</a>
                            </li>
                            <li class="self_item">
                                <a class="self_link" href="">Giao hàng miễn phí</a>
                            </li>
                            <li class="self_item">
                                <a class="self_link" href="">Điều khoản sử dụng</a>
                            </li>
                            <li class="self_item">
                                <a class="self_link" href="">Chính sách ưu đãi</a>
                            </li>
                        </ul>
                    </div>
                    <div class="for_us-SIA">
                        <h4 class="self_title">Tư vấn</h4>
                        <ul style="list-style-type: none;" class="self_list">
                            <li class="self_item">
                                <a class="self_link" href="">Trao đổi, giao dich</a>
                            </li>
                            <li class="self_item">
                                <a class="self_link" href="">Văn phòng</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="self_title copyright">&#169; 2021 by Mang Bao</div>
            </div>
        </footer>
        <!-- Modal -->
        <div class="modal" id="myModal">
            <div class="modal__overlay">
                <div class="modal__body">
                    <!-- Register form -->
                    <div class="auth-form" id="s_up">
                        <div class="auth-form__container">
                            <div class="auth-form__header">
                                <h3 class="auth__form-heading">Đăng ký</h3>
                                <span class="auth__form-switch-btn">Đăng nhập</span>
                            </div>

                            <div class="auth-form__form">
                                <div class="auth-form__group">
                                    <input type="text" class="auth-form__input" placeholder="Nhập email của bạn">
                                </div>
                                <div class="auth-form__group">
                                    <input type="password" class="auth-form__input" placeholder="Nhập mật khẩu của bạn">
                                </div>
                                <div class="auth-form__group">
                                    <input type="password" class="auth-form__input" placeholder="Nhập lại mật khẩu của bạn">
                                </div>
                            </div>

                            <div class="auth-form__aside">
                                <p class="auth-form__policy-text">
                                    Bằng việc đăng ký, bạn đã đồng ý với F8-Shop về
                                    <a href="" class="auth-form__text-link">Điều khoản dịch vụ</a> &
                                    <a href="" class="auth-form__text-link">Chính sách bảo mật</a>
                                </p>
                            </div>

                            <div class="auth-form__controls">
                                <button onclick="document.getElementById('myModal').style.display='none'" class="bt_log  auth-form__controls-back back2">TRỞ LẠI</button>
                                <button class="bt_log bt_log-color" id="s-up">ĐĂNG KÝ</button>
                            </div>
                        </div>

                        <div class="auth-form__socicals">
                            <a href="" class="auth-form__socicals--facebook btn btn--size-s btn--with-icon">
                                <i class="auth-form__socicals-icon fab fa-facebook-square"></i>
                                <span class="auth-form__socicals-title">
                                    Kết nối với Facebook
                                </span>
                            </a>
                            <a href="" class="auth-form__socicals--google btn btn--size-s btn--with-icon">
                                <i class="auth-form__socicals-icon fab fa-google"></i>
                                <span class="auth-form__socicals-title">
                                    Kết nối với Google
                                </span>
                            </a>
                        </div>
                    </div>
                    <!-- Login form -->
                    <div class="auth-form" id="s_in">
                        <div class="auth-form__container">
                            <div class="auth-form__header">
                                <h3 class="auth__form-heading">Đăng nhập</h3>
                                <span class="auth__form-switch-btn">Đăng ký</span>
                            </div>

                            <div class="auth-form__form">
                                <div class="auth-form__group">
                                    <input type="text" class="auth-form__input" id="a" placeholder="Nhập email của bạn">
                                </div>
                                <div class="auth-form__group">
                                    <input type="password" class="auth-form__input" id="b" placeholder="Nhập mật khẩu của bạn">
                                </div>

                            </div>

                            <div class="auth-form__aside">
                                <div class="auth-form__help">
                                    <a href="" class="auth-form__link auth-form__help-forgot">Quên mật khẩu</a>
                                    <span class="auth-form__link-separate"></span>
                                    <a href="" class="auth-form__link">Cần trợ giúp?</a>
                                </div>
                            </div>

                            <div class="auth-form__controls">
                                <button onclick="document.getElementById('myModal').style.display='none'" class="bt_log  auth-form__controls-back back1">TRỞ LẠI</button>
                                <button class="bt_log bt_log-color" id="s-in">ĐĂNG NHẬP</button>
                            </div>
                        </div>

                        <div class="auth-form__socicals">
                            <a href="" class="auth-form__socicals--facebook btn btn--size-s btn--with-icon">
                                <i class="auth-form__socicals-icon fab fa-facebook-square"></i>
                                <span class="auth-form__socicals-title">
                                    Kết nối với Facebook
                                </span>
                            </a>
                            <a href="" class="auth-form__socicals--google btn btn--size-s btn--with-icon">
                                <i class="auth-form__socicals-icon fab fa-google"></i>
                                <span class="auth-form__socicals-title">
                                    Kết nối với Google
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>